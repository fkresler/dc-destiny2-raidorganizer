{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "declaration": true,
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es2019",
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "./build/*",
    "./node_modules/*",
  ],
  "include": [
    "./src/**/*.ts"
  ]
}